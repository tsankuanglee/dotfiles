# MENU system - general
bindsym $mod+m mode "$mode_general"
set $mode_general (s)ystem (c)ontainer (r)esize/move window (w)orkspace (g)ap (b)order (m)ouse (a)pps (i)3
mode "$mode_general" {
    bindsym s mode "$mode_system"
    bindsym c mode "$mode_container"
    bindsym r mode "$mode_resize_move_window"
    bindsym w mode "$mode_workspace"
    bindsym g mode "$mode_gap"
    bindsym b mode "$mode_border"
    bindsym m mode "$mode_mouse"
    bindsym a mode "$mode_apps"
    bindsym i mode "$mode_i3"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# i3 itself
set $mode_i3 re(s)tart i3; (c)onfig reload
mode "$mode_i3" {
    # reload the configuration file
    bindsym c reload
    # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
    bindsym s restart
    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# mouse
set $mode_mouse (')cursor to active window
mode "$mode_mouse" {
    bindsym apostrophe exec --no-startup-id /home/tklee/.xbindkeysrc.lib/move_cursor_to_active_window.sh ; mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# apps
set $mode_apps (p)lacement
mode "$mode_apps" {
    bindsym p exec notify-send "TBD" "TBD"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# system
set $mode_system (l)ock, (L)ock after 30min, (e)xit, (s)uspend, (h)ibernate, (R)eboot, (S)hutdown
mode "$mode_system" {
    set $locker_now /home/tklee/.xbindkeysrc.lib/lock_screen.py --now && sleep 1
    set $locker_delay /home/tklee/.xbindkeysrc.lib/lock_screen.py --add 30 && sleep 1

    bindsym l exec --no-startup-id $locker_now; mode "default"
    bindsym Shift+l exec --no-startup-id $locker_delay ; mode "default"
    bindsym e exec --no-startup-id i3-msg exit; mode "default"
    bindsym s exec --no-startup-id $locker_now && systemctl suspend ; mode "default"
    #bindsym u exec --no-startup-id i3-msg switch_user, mode "default"
    bindsym h exec --no-startup-id $locker_now && systemctl hibernate; mode "default"
    bindsym Shift+r exec --no-startup-id systemctl reboot ; mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i; mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# container
set $mode_container stackin(g),(Tab),toggle_spli(t); s(w)ap
mode "$mode_container" {
    bindsym Return mode "default"
    bindsym Escape mode "default"

    bindsym g layout stacking; mode "default"
    bindsym Tab layout tabbed; mode "default"
    bindsym t layout toggle split; mode "default"

    bindsym w mode "$mode_container_swap"
}

set $mode_container_swap Swap container with
mode "$mode_container_swap" {
    bindsym Return mode "default"
    bindsym Escape mode "default"

    # TODO (perhaps change to swap screen?)
    #bindsym 1 swap container with con_id 1
}

# resize window (you can also use the mouse for that)
set $mode_resize_move_window c)enter; 12345: presets; arrows/ijkl: resizing; +Alt: moving; +shift 10x; +ctrl 50x; +shift+ctrl 100x
mode "$mode_resize_move_window" {

    # for floating
    bindsym c move position center
    bindsym 1 resize set 640 480
    bindsym 2 resize set 800 600
    bindsym 3 resize set 1024 768
    bindsym 4 resize set 1080 960
    bindsym 5 resize set 1280 800


    ## Resize: Down/Right grow, Up/Left shrink
    bindsym j resize shrink width 1 px
    bindsym k resize grow height 1 px
    bindsym i resize shrink height 1 px
    bindsym l resize grow width 1 px

    bindsym Left resize shrink width 1 px
    bindsym Down resize grow height 1 px
    bindsym Up resize shrink height 1 px
    bindsym Right resize grow width 1 px

    # shift for 10x
    bindsym Shift+j resize shrink width 10 px
    bindsym Shift+k resize grow height 10 px
    bindsym Shift+i resize shrink height 10 px
    bindsym Shift+l resize grow width 10 px

    bindsym Shift+Left resize shrink width 10 px
    bindsym Shift+Down resize grow height 10 px
    bindsym Shift+Up resize shrink height 10 px
    bindsym Shift+Right resize grow width 10 px

    # ctrl for 50x
    bindsym Control+j resize shrink width 50 px
    bindsym Control+k resize grow height 50 px
    bindsym Control+i resize shrink height 50 px
    bindsym Control+l resize grow width 50 px

    bindsym Control+Left resize shrink width 50 px
    bindsym Control+Down resize grow height 50 px
    bindsym Control+Up resize shrink height 50 px
    bindsym Control+Right resize grow width 50 px

    # shift+ctrl for 100x
    bindsym Control+Shift+j resize shrink width 100 px
    bindsym Control+Shift+k resize grow height 100 px
    bindsym Control+Shift+i resize shrink height 100 px
    bindsym Control+Shift+l resize grow width 100 px

    bindsym Control+Shift+Left resize shrink width 100 px
    bindsym Control+Shift+Down resize grow height 100 px
    bindsym Control+Shift+Up resize shrink height 100 px
    bindsym Control+Shift+Right resize grow width 100 px

    # move (Mod1 -- Alt)
    bindsym Mod1+j move left 1 px
    bindsym Mod1+k move down 1 px
    bindsym Mod1+i move up 1 px
    bindsym Mod1+l move right 1 px

    bindsym Mod1+Left move left 1 px
    bindsym Mod1+Down move down 1 px
    bindsym Mod1+Up move up 1 px
    bindsym Mod1+Right move right 1 px

    # shift 10x
    bindsym Mod1+Shift+j move left 10 px
    bindsym Mod1+Shift+k move down 10 px
    bindsym Mod1+Shift+i move up 10 px
    bindsym Mod1+Shift+l move right 10 px

    bindsym Mod1+Shift+Left move left 10 px
    bindsym Mod1+Shift+Down move down 10 px
    bindsym Mod1+Shift+Up move up 10 px
    bindsym Mod1+Shift+Right move right 10 px

    # control 50x
    bindsym Mod1+Control+j move left 50 px
    bindsym Mod1+Control+k move down 50 px
    bindsym Mod1+Control+i move up 50 px
    bindsym Mod1+Control+l move right 50 px

    bindsym Mod1+Control+Left move left 50 px
    bindsym Mod1+Control+Down move down 50 px
    bindsym Mod1+Control+Up move up 50 px
    bindsym Mod1+Control+Right move right 50 px

    # shift+control 100x
    bindsym Mod1+Shift+Control+j move left 100 px
    bindsym Mod1+Shift+Control+k move down 100 px
    bindsym Mod1+Shift+Control+i move up 100 px
    bindsym Mod1+Shift+Control+l move right 100 px

    bindsym Mod1+Shift+Control+Left move left 100 px
    bindsym Mod1+Shift+Control+Down move down 100 px
    bindsym Mod1+Shift+Control+Up move up 100 px
    bindsym Mod1+Shift+Control+Right move right 100 px

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# gap
set $mode_gap resize gap: i/k/up/down: inner, j/l/left/right: outer, 0: inner to 0, p: outer to 0 resize arrows/ijkl for inner gap resizing;; +shift 10x; +ctrl 50x; +shift+ctrl 100x
mode "$mode_gap" {

    bindsym 0 gaps inner current set 0
    bindsym p gaps outer current set 0

    bindsym i gaps inner current plus 1
    bindsym k gaps inner current minus 1
    bindsym j gaps outer current minus 1
    bindsym l gaps outer current plus 1

    bindsym Up gaps inner current plus 1
    bindsym Down gaps inner current minus 1
    bindsym Left gaps outer current minus 1
    bindsym Right gaps outer current plus 1

    # shift for 10x
    bindsym Shift+i gaps inner current plus 10
    bindsym Shift+k gaps inner current minus 10
    bindsym Shift+j gaps outer current minus 10
    bindsym Shift+l gaps outer current plus 10

    bindsym Shift+Up gaps inner current plus 10
    bindsym Shift+Down gaps inner current minus 10
    bindsym Shift+Left gaps outer current minus 10
    bindsym Shift+Right gaps outer current plus 10

    # ctrl for 50x
    bindsym Control+i gaps inner current plus 50
    bindsym Control+k gaps inner current minus 50
    bindsym Control+j gaps outer current minus 50
    bindsym Control+l gaps outer current plus 50

    bindsym Control+Up gaps inner current plus 50
    bindsym Control+Down gaps inner current minus 50
    bindsym Control+Left gaps outer current minus 50
    bindsym Control+Right gaps outer current plus 50

    # shift+ctrl for 100x
    bindsym Control+Shift+i gaps inner current plus 100
    bindsym Control+Shift+k gaps inner current minus 100
    bindsym Control+Shift+j gaps outer current minus 100
    bindsym Control+Shift+l gaps outer current plus 100

    bindsym Control+Shift+Up gaps inner current plus 100
    bindsym Control+Shift+Down gaps inner current minus 100
    bindsym Control+Shift+Left gaps outer current minus 100
    bindsym Control+Shift+Right gaps outer current plus 100

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# border
