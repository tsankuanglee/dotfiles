    bindsym 4 border pixel 4
    bindsym 5 border pixel 5
    bindsym 6 border pixel 6
    bindsym 7 border pixel 7
    bindsym 8 border pixel 8
    bindsym 9 border pixel 9

    bindsym b border toggle
    bindsym shift+b border normal

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_workspace (j/k/Left/Right):move workspace to left/right
mode "$mode_workspace" {
    bindsym j move workspace to output left; mode "default"
    bindsym l move workspace to output right; mode "default"
    bindsym Left move workspace to output left; mode "default"
    bindsym Right move workspace to output right; mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


